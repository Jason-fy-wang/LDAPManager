{
  "name": "ldapmanage",
  "version": "0.1.0",
  "type": "commonjs",
  "author": {
    "name": "Jason",
    "email": "kai.fy.wang@foxmail.com"
  },
  "description": "A simple LDAP management tool",
  "license": "MIT",
  "private": true,
  "main": "src/electron/main.js",
  "scripts": {
    "clean": "rimraf dist_electron && rimraf dist",
    "serve": "vite --port 5173",
    "lint": "vue-cli-service lint",
    "start": "concurrently -k \"npm run serve\"  \"npm run electron\"",
    "electron": "sleep 2s && cross-env NODE_ENV=dev electron .",
    "electron_local": "cross-env NODE_ENV=dev electron .",
    "build:renderer": "vite build",
    "build:electron": "cross-env NODE_ENV=production electron-builder",
    "build": "npm run clean && npm run build:renderer && npm run build:electron",
    "cmd:build": "localbuild.cmd",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "core-js": "^3.8.3",
    "element-plus": "^2.8.7",
    "ldapts": "^7.2.1",
    "normalize.css": "^8.0.1",
    "pinia": "^3.0.2",
    "vue": "^3.2.13",
    "vue-router": "^4.4.5"
  },
  "build": {
    "appId": "com.open.ldapmanage",
    "productName": "LdapManage",
    "files": [
      "src/**/*",
      "dist/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@pinia/testing": "^1.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitest/coverage-istanbul": "^3.1.4",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.25.1",
    "eslint-plugin-vue": "^10.0.0",
    "happy-dom": "^17.5.6",
    "less": "^4.2.0",
    "mocha": "^11.1.0",
    "rimraf": "^6.0.1",
    "vite": "^6.3.3",
    "vitest": "^3.1.4",
    "wait-on": "^8.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
